@model YardControlSystem.Models.ViewModels.OrderViewModel

<form method="post" asp-action="Delete">
    <input asp-for="Order.OrderNr" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Pašalinti užsakymą</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="@Model.Order.OrderNr">Užsakymo nr.</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="@Model.Order.OrderNr" disabled max="2,147,483,647" class="form-control" />
                        <span asp-validation-for="@Model.Order.OrderNr" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="@Model.Order.TrailerLicensePlate">Transporto priemonės valstybiniai nr.</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="@Model.Order.TrailerLicensePlate" disabled class="form-control" />
                        <span asp-validation-for="@Model.Order.TrailerLicensePlate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="@Model.Order.PickUpWarehouseId">Pakrovimo sandėlys</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="@Model.PickUpWarehouse.Company" disabled class="form-control" />
                        <span asp-validation-for="@Model.PickUpWarehouse.Company" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="@Model.Order.DropOffWarehouseId">Iškrovimo sandėlys</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="@Model.DropOffWarehouse.Company" disabled class="form-control" />
                        <span asp-validation-for="@Model.DropOffWarehouse.Company" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Šalinti" />
                        </div>
                        <div class="col">
                            <a asp-action="OrdersView" class="btn btn-success w-75">Atgal</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
